@model ClientHub.Web.Models.Address

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Endereço</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Id" type="hidden" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Thoroughfare" class="control-label">Logradouro</label>
                <input asp-for="Thoroughfare" class="form-control" />
                <span asp-validation-for="Thoroughfare" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationNumber" class="control-label">Número</label>
                <input asp-for="LocationNumber" class="form-control" />
                <span asp-validation-for="LocationNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Neighborhood" class="control-label">Bairro</label>
                <input asp-for="Neighborhood" class="form-control" />
                <span asp-validation-for="Neighborhood" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">Cidade</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="State" class="control-label">Estado</label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ClientId" type="hidden" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    @Html.ActionLink("Voltar", "Details", "Client", new { id = Model.ClientId })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
