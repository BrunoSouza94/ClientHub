@model ClientHub.Web.Models.Address

@{
    ViewData["Title"] = "Delete";
}

<h1>Remover</h1>
<br />
<h3>Tem certeza que irá remover o endereço?</h3>
<br />
<div>
    <h4>Endereço</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Logradouro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Thoroughfare)
        </dd>
        <dt class = "col-sm-2">
            Número
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationNumber)
        </dd>
        <dt class = "col-sm-2">
            Bairro
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Neighborhood)
        </dd>
        <dt class = "col-sm-2">
            Cidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
    </dl>
    <br />
    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ClientId" />
        <input type="submit" value="Remover" class="btn btn-danger" /> |
        @Html.ActionLink("Voltar", "Details", "Client", new { id = Model.ClientId })
    </form>
</div>
